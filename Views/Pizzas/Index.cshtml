@model IEnumerable<PizzaStore.Models.Pizza>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoughType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheeseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsVegan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calories)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoughType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheeseType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsVegan)
            </td>
            <!--
            <td>
                <partial name="_FinishedPizzaImage" model="item" />
            </td>
            -->
            <td>
                <!-- Display the topping names that are selected for a given pizza -->
                    @{
                    if (item.Toppings != null)
                    {
                        foreach (Topping topping in item.Toppings)
                        {
                            @Html.DisplayFor(modelItem => topping.Name);
                        }
                    }
                    }

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
