@model PizzaStore.Models.Pizza

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<h4>Pizza</h4>
<hr />

<div style="display:flex;">
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Calories)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Calories)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoughType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoughType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CheeseType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CheeseType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsVegan)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsVegan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsGlutenFree)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsGlutenFree)
        </dd>
        <dt class="col-sm-2">
            Selected Toppings
        </dt>
        <dd class="col-sm-10">
            <ul>
                @{
                    foreach (PizzaAssociation pizzaAssociation in ViewBag.PizzaAssociations) {
                        foreach (Topping topping in ViewBag.Toppings) {
                            if (topping.Id == pizzaAssociation.ToppingId)
                            {
                                <li>@topping.Name</li>
                            }
                    }
                }
                }
            </ul>
        </dd>
    </dl>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
</div>
<div>
    <dl class="row">
        <dd>
            <partial name="_FinishedPizzaImage" model="Model" />
        </dd>
    </dl>
</div>
</div>