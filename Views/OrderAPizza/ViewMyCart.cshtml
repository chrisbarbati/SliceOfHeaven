@model PizzaStore.Models.Cart

@{
    if (Model == null || Model.CartItems == null || Model.CartItems.Count() == 0)
    {
        <div class="alert alert-warning">
            <p>Your cart is empty!
        </p>
        </div>

        return;
    }
}

@{
    ViewData["Title"] = "Cart Details for" + Model.User.Email;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Pizza:</th>
                <th>Quantity:</th> <!-- Stubbed out, not sure if I'll add. -->
                <th>Price:</th>
                <th>Sub-Total:</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cartItem in Model.CartItems)
            {
                var subtotal = cartItem.Price * (1); <!-- Quantity would be second term-->

                <tr>
                    <td>@cartItem.Pizza.Name</td>
                    <td>1</td><!-- Quantity to go here if implemented -->
                    <td>@cartItem.Pizza.Price</td>
                    <td>@subtotal</td>
                    <td>
                        <form class="d-inline" asp-action="DeleteCartItem">
                            <input type="hidden" name="cartItemId" value="@cartItem.Id">
                            <input class="btn btn-danger" type="submit" value="Remove">
                        </form>

                        <a class="btn btn-secondary" asp-action="pizzaDetails" asp-route-id="@cartItem.ProductId">
                            View Pizza
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>

        </tfoot>
    </table>
    
</div>
<div>
</div>
