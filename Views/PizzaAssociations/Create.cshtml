@model PizzaStore.Models.PizzaAssociation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>PizzaAssociation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PizzaId" class="control-label"></label>
                <select asp-for="PizzaId" class ="form-control" asp-items="ViewBag.PizzaId"></select>
            </div>

            <div class="form-group">
            @{
            foreach (Topping toppingOption in ViewBag.AvailableToppings)
            {
                <div>
                            @Html.HiddenFor(pizzaAssociation => pizzaAssociation.PizzaId) <!-- Hidden field to bind PizzaId -->
                    <input type="checkbox" name="selectedToppingIDs" value="@toppingOption.Id" /> <!-- Results in an array of integers, each of which is a toppingID -->
                <label>@toppingOption.Name</label>
            </div>
            }
            }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
